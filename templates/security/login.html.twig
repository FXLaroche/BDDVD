{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form class="container d-flex flex-column mt-5 security-form" method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('logout') }}">Logout</a>
			</div>
		{% endif %}
		<div class="row justify-content-center">
			<div class="col-12 col-md-12">
				<label for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mx-auto" autocomplete="email" required autofocus>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-12 col-md-12">
				<label for="inputPassword">Password</label>
				<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
			</div>
		</div>
		<br>
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		<button class="btn btn-lg btn-secondary text-light mx-auto mt-3" type="submit">
			Entrer
		</button>
	</form>
{% endblock %}
